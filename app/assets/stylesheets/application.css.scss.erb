body {
  background: url(<%= asset_path 'sos.png' %>) fixed;
  font-family: 'Roboto', sans-serif;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: 'Roboto', sans-serif;
}

.wrapper {
  max-width: 520px;
  padding: 20px;
  margin: auto;
}

.header {
  text-align: center;
  margin-bottom: 20px;
  h1 {
    font-family: 'Sigmar One', cursive;
    margin-bottom: 0;
    font-size: 32px;
    @media (min-width: 768px) {
      font-size: 50px;
    }
  }
  span {
    font-family: 'Port Lligat Slab', serif;
    font-size: 18px;
    @media (min-width: 768px) {
      font-size: 24px;
    }
  }
  a {
    color: black;
    text-decoration: none;
  }
}
